<div class="container_2">
<p id="notice"><%= notice %></p>
   <div class= "post">
     <h2><%= @article.title %> </h2>
     <a href="https://twitter.com/share" class="twitter-share-button" data-via="DavidGr03657611" data-size="large">Tweet</a>
      <span class="post-date">
        <%= @article.created_at.strftime("%d, %B %Y") %> 
      </span>
       <%= image_tag @article.images.url %>
      
      <p><%= @article.body %> </p>
         <%= render partial: 'comments/form' %>
        <button type="button" class="close" aria-hidden="true">&times;</button>
    </div>
    <label>Comment Box</label>
    <div class="commentBox">       
        <p class="taskDescription">Please add your comment here</p>
         <%= render partial: 'articles/comment', collection: @article.comments, class: "post-box" %>
    </div>   
   </div>
 </div>

  <%= link_to "Back to blog", article_path  %>
